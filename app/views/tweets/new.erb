<h2> Your new tweet <%= current_user.name.capitalize %> </h2> 
<a href='/users/<%= current_user.id%>/edit'> Edit </a> &nbsp;&nbsp; <a href="/users/login">Home</a> &nbsp;&nbsp; <a href="/signout">Logout</a>
<br>
<br>

<div class="bootstrap-iso">

<%= @errors if @errors %>
 <div class="container-fluid">
  <div class="row">
   <div class="col-md-6 col-sm-6 col-xs-12">
    <form method="post" action='/users/<%= current_user.id%>/tweets'>
     <div class="form-group ">
      <label class="control-label requiredField" for="message">
       Tweet
       <span class="asteriskField">
        *
       </span>
      </label>
      <textarea class="form-control" cols="40" id="message" name=tweet[content] placeholder="140 chars only" rows="1"></textarea>
     </div>
     <div class="form-group">
      <div>
       <button class="btn btn-primary " name="Tweet" type="submit" value="Tweet">
        Tweet
       </button>
      </div>
     </div>
    </form>
   </div>
  </div>
 </div>
</div>